{
  "name": "Rider .NET 8 DevContainer",
  "image": "mcr.microsoft.com/devcontainers/dotnet:8.0", 
  "features": {
    "ghcr.io/devcontainers/features/git:1": {} 
  },
  "remoteUser": "vscode",

  "forwardPorts": [5173, 5000, 5001],

  "postCreateCommand": "dotnet --info && git --version",

  "customizations": {
    "jetbrains": {
      "backend": "rider"
    },
    "vscode": {
      "extensions": [
        "ms-dotnettools.csharp"
      ]
    }
  }
}
